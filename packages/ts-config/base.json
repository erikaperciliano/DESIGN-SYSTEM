{
   "compilerOptions": {
    "compile": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistantCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "stric": true
   },
   "exclude": ["node_modules"]
}